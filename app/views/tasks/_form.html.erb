<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
  <ul>
    <% task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <%end %>
  </ul>
  <% end %>
  <%= f.label :content, '内容' %>
  <%= f.text_field :content %>
  <%= f.label :status, '状態' %>
  <%= f.text_field :status %>
  <%= f.submit '送信' %>
<% end %>