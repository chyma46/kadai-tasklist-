<h1>タスク一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>内容</th>
      <th>状態</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.content %></td>
      <td><%= task.status %></td>
    </tr>
    <% end %>
  </tbody>

<%= link_to '新規タスク作成', new_task_path, class: "btn btn-primary" %>